    <audio id="siren" src="https://www.soundjay.com/buttons/sounds/beep-01a.mp3" loop></audio>

    <script>
        // ‡¶¨‡ßç‡¶Ø‡¶æ‡¶ï‡¶ó‡ßç‡¶∞‡¶æ‡¶â‡¶®‡ßç‡¶° ‡¶Æ‡ßç‡¶Ø‡¶æ‡¶ü‡ßç‡¶∞‡¶ø‡¶ï‡ßç‡¶∏ ‡¶á‡¶´‡ßá‡¶ï‡ßç‡¶ü
        const canvas = document.getElementById('canvas');
        const ctx = canvas.getContext('2d');
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
        const chars = "*#(&%$#)*&$%078783HU#*09*#)(%";
        const drops = Array(Math.floor(canvas.width / 16)).fill(1);

        function drawMatrix() {
            ctx.fillStyle = "rgba(0, 0, 0, 0.05)";
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            ctx.fillStyle = "#0f0";
            drops.forEach((y, i) => {
                const text = chars[Math.floor(Math.random() * chars.length)];
                ctx.fillText(text, i * 16, y * 16);
                if (y * 16 > canvas.height && Math.random() > 0.975) drops[i] = 0;
                drops[i]++;
            });
        }
        setInterval(drawMatrix, 50);

        // ‡¶ó‡ßá‡¶Æ ‡¶≤‡¶ú‡¶ø‡¶ï
        let currentLayer = 0;
        let temp = 450;
        let pressure = 120;
        const siren = document.getElementById('siren');

        const missions = [
            { q: "‡ßß. ‡¶ú‡ßç‡¶Ø‡ßã‡¶§‡¶ø‡¶∞‡ßç‡¶™‡¶¶‡¶æ‡¶∞‡ßç‡¶•‡¶¨‡¶ø‡¶ú‡ßç‡¶û‡¶æ‡¶®: Schwarzschild Radius ‡¶∏‡ßÇ‡¶§‡ßç‡¶∞‡ßá ‡¶ß‡ßç‡¶∞‡ßÅ‡¶¨‡¶ï 'c' ‡¶ï‡¶ø‡¶∏‡ßá‡¶∞ ‡¶¨‡ßá‡¶ó ‡¶®‡¶ø‡¶∞‡ßç‡¶¶‡ßá‡¶∂ ‡¶ï‡¶∞‡ßá? (‡¶è‡¶ï ‡¶ï‡¶•‡¶æ‡ßü ‡¶≤‡¶ø‡¶ñ‡ßÅ‡¶®)", a: "‡¶Ü‡¶≤‡ßã" },
            { q: "‡ß®. ‡¶∏‡¶Ç‡¶¨‡¶ø‡¶ß‡¶æ‡¶®: ‡¶ú‡¶∞‡ßÅ‡¶∞‡¶ø ‡¶Ö‡¶¨‡¶∏‡ßç‡¶•‡¶æ ‡¶ò‡ßã‡¶∑‡¶£‡¶æ‡¶∞ ‡¶Ö‡¶®‡ßÅ‡¶ö‡ßç‡¶õ‡ßá‡¶¶ ‡¶®‡¶Æ‡ßç‡¶¨‡¶∞ ‡¶ï‡¶§?", a: "141" },
            { q: "‡ß©. ‡¶™‡¶¶‡¶æ‡¶∞‡ßç‡¶•‡¶¨‡¶ø‡¶ú‡ßç‡¶û‡¶æ‡¶®: ‡¶á‡¶â‡¶∞‡ßá‡¶®‡¶ø‡ßü‡¶æ‡¶Æ-‡ß®‡ß©‡ß´ ‡¶è‡¶∞ ‡¶™‡¶æ‡¶∞‡¶Æ‡¶æ‡¶£‡¶¨‡¶ø‡¶ï ‡¶∏‡¶Ç‡¶ñ‡ßç‡¶Ø‡¶æ ‡¶ï‡¶§?", a: "92" },
            { q: "‡ß™. ‡¶ó‡¶£‡¶ø‡¶§: (25 * 4) + 50 - 10 ‡¶ï‡¶§ ‡¶π‡ßü?", a: "140" },
            { q: "‡ß´. ‡¶∞‡¶∏‡¶æ‡ßü‡¶®: ‡¶≠‡¶æ‡¶∞‡ßÄ ‡¶™‡¶æ‡¶®‡¶ø‡¶∞ (Heavy Water) ‡¶∞‡¶æ‡¶∏‡¶æ‡ßü‡¶®‡¶ø‡¶ï ‡¶∏‡¶Ç‡¶ï‡ßá‡¶§ ‡¶ï‡ßÄ?", a: "D2O" },
            { q: "‡ß¨. ‡¶á‡¶§‡¶ø‡¶π‡¶æ‡¶∏: ‡¶ö‡ßá‡¶∞‡¶®‡ßã‡¶¨‡¶ø‡¶≤ ‡¶¶‡ßÅ‡¶∞‡ßç‡¶ò‡¶ü‡¶®‡¶æ ‡¶ï‡¶§ ‡¶∏‡¶æ‡¶≤‡ßá ‡¶ò‡¶ü‡ßá‡¶õ‡¶ø‡¶≤?", a: "1986" },
            { q: "‡ß≠. ‡¶´‡¶æ‡¶á‡¶®‡¶æ‡¶≤: ‡¶ö‡ßÅ‡¶≤‡ßç‡¶≤‡¶ø ‡¶¨‡¶®‡ßç‡¶ß ‡¶ï‡¶∞‡¶§‡ßá ‡¶ü‡¶æ‡¶á‡¶™ ‡¶ï‡¶∞‡ßÅ‡¶® 'SHUTDOWN'", a: "SHUTDOWN" }
        ];

        function addLog(msg) {
            const log = document.getElementById('log');
            log.innerHTML += `<br>> ${msg}`;
            log.scrollTop = log.scrollHeight;
        }

        function processInput() {
            const input = document.getElementById('user-input').value.trim();
            document.getElementById('user-input').value = "";

            if (currentLayer === 0 && input.toUpperCase() === "START") {
                siren.play();
                currentLayer = 1;
                updateGame();
                return;
            }

            if (currentLayer > 0 && currentLayer <= 7) {
                if (input.toLowerCase() === missions[currentLayer - 1].a.toLowerCase()) {
                    addLog("‚úÖ ‡¶∏‡¶ø‡¶ï‡¶ø‡¶â‡¶∞‡¶ø‡¶ü‡¶ø ‡¶≤‡ßá‡¶≠‡ßá‡¶≤ ‡¶Ü‡¶®‡¶≤‡¶ï‡¶°!");
                    temp -= 40;
                    pressure -= 10;
                    currentLayer++;
                } else {
                    addLog("‚ùå ‡¶≠‡ßÅ‡¶≤ ‡¶ï‡ßã‡¶°! ‡¶§‡¶æ‡¶™‡¶Æ‡¶æ‡¶§‡ßç‡¶∞‡¶æ ‡¶¨‡¶æ‡ßú‡¶õ‡ßá!");
                    temp += 150;
                    pressure += 30;
                }
                updateGame();
            }
        }

        function updateGame() {
            document.getElementById('temp').innerText = temp;
            document.getElementById('pressure').innerText = pressure;
            document.getElementById('layer').innerText = currentLayer - 1;

            if (temp >= 1000) {
                document.getElementById('game-over').style.display = 'flex';
                siren.pause();
            } else if (currentLayer > 7) {
                document.getElementById('win-screen').style.display = 'flex';
                siren.pause();
            } else {
                addLog(missions[currentLayer - 1].q);
            }

            if (temp > 800) document.getElementById('temp').classList.add('temp-danger');
            else document.getElementById('temp').classList.remove('temp-danger');
        }
